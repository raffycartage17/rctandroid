<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tqcal_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@color/dark_gray_text_color">

    <ImageButton
        android:id="@+id/tqcal_qr_display_imagebutton"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_placeholder" />

    <Button
        android:id="@+id/tqcal_generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Generate QR Code"
        app:layout_constraintEnd_toEndOf="@+id/tqcal_qr_textbox"
        app:layout_constraintStart_toStartOf="@+id/tqcal_qr_textbox"
        app:layout_constraintTop_toBottomOf="@+id/tqcal_qr_textbox" />

    <EditText
        android:id="@+id/tqcal_qr_textbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter Text Here"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#AEAEAE"
        app:layout_constraintEnd_toEndOf="@+id/tqcal_qr_display_imagebutton"
        app:layout_constraintStart_toStartOf="@+id/tqcal_qr_display_imagebutton"
        app:layout_constraintTop_toBottomOf="@+id/tqcal_qr_display_imagebutton" />
</androidx.constraintlayout.widget.ConstraintLayout>