<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/f5_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/f5_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f5_f1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F1"
        app:layout_constraintBottom_toTopOf="@+id/f5_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/f5_recycler_view"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f5_f3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="F3"
        app:layout_constraintBottom_toTopOf="@+id/f5_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f5_f2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F2"
        app:layout_constraintBottom_toTopOf="@+id/f5_recycler_view"
        app:layout_constraintEnd_toStartOf="@+id/f5_f3_button"
        app:layout_constraintStart_toEndOf="@+id/f5_f1_button"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>