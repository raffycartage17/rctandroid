<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/window1_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".windows.Window1">

    <ImageView
        android:id="@+id/window1_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/window1_filepicker_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Open File Picker"
        app:layout_constraintEnd_toEndOf="@+id/window1_imageview"
        app:layout_constraintStart_toStartOf="@+id/window1_imageview"
        app:layout_constraintTop_toBottomOf="@+id/window1_imageview" />

    <Button
        android:id="@+id/window1_open_dialog_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Test Dialog"
        app:layout_constraintEnd_toEndOf="@+id/window1_filepicker_btn"
        app:layout_constraintStart_toStartOf="@+id/window1_filepicker_btn"
        app:layout_constraintTop_toBottomOf="@+id/window1_filepicker_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>